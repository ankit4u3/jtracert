<shortcuts>

    <skipIfNotSupported/>

    <programGroup
            defaultName="jTracert"
            location="applications"/>

    <shortcut
            name="jTracert"
            description="jTracert"

            type="Application"
            initialState="noShow"

            workingDirectory="$INSTALL_PATH"
            target="$INSTALL_PATH\jTracert.exe"

            programGroup="yes"
            desktop="yes"

            encoding="UTF-8"
            terminal="false"
            KdeSubstUID="false"

            Categories="Development;"
            >
        <createForPack name="jTracert"/>
    </shortcut>

    <shortcut
            name="jTracert web site"
            description="Visit jTracert official web site"

            target="http://jtracert.googlecode.com/"
            initialState="normal"

            programGroup="yes"
            desktop="no"

            encoding="UTF-8"
            terminal="false"
            KdeSubstUID="false"

            Categories="Development;"
            >
        <createForPack name="jTracert"/>
    </shortcut>

    <shortcut
            name="Uninstall jTracert"
            description="Uninstall jTracert"

            type="Application"

            target="javaw"
            commandLine="-jar
     &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"

            programGroup="yes"
            desktop="no"

            iconFile="trashcan_full"
            iconIndex="0"

            encoding="UTF-8"
            terminal="false"
            KdeSubstUID="false"

            Categories="Development;"
            >
        <createForPack name="jTracert" />
    </shortcut>

