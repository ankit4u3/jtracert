<assembly>
    <baseDirectory>jTracert</baseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>

    <fileSets>
        <fileSet>
            <directory>src/main/bin</directory>
            <includes>
                <include>*.sh</include>
                <include>*.cmd</include>
            </includes>
            <outputDirectory>/</outputDirectory>
            <fileMode>0744</fileMode>
        </fileSet>

        <fileSet>
            <directory>src/main/3ppLicense</directory>
            <includes>
                <include>*.txt</include>
            </includes>
            <outputDirectory>3ppLicense</outputDirectory>
        </fileSet>
    </fileSets>

    <files>
        <file>
            <source>target/dependency/jtracert-agent.jar</source>
            <destName>jTracert.jar</destName>
        </file>
        <file>
            <source>target/dependency/jtracert-gui.jar</source>
            <destName>jTracert-gui.jar</destName>
        </file>
        <file>
            <source>target/dependency/sdedit.jar</source>
        </file>
    </files>

</assembly>