<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>

    <skipIfNotSupported/>

    <programGroup
            defaultName="Programming"
            location="applications"/>

    <shortcut
            name="jTracert"
            description="jTracert"

            type="Application"

            workingDirectory="$INSTALL_PATH"
            target="$INSTALL_PATH/jtracert.sh"

            iconFile="$INSTALL_PATH/jTracert.png"
            iconIndex="0"

            programGroup="yes"
            desktop="yes"

            encoding="UTF-8"
            terminal="false"
            KdeSubstUID="false"

            Categories="Development;"
            >
        <createForPack name="jTracert"/>
    </shortcut>

    <shortcut
            name="jTracert web site"
            description="Visit jTracert official web site"

            type="Application"

            target="xdg-open"
            commandLine="http://jtracert.googlecode.com/"

            programGroup="yes"
            desktop="no"

            iconFile="applications-internet"
            iconIndex="0"

            encoding="UTF-8"
            terminal="false"
            KdeSubstUID="false"

            Categories="Development;"
            >
        <createForPack name="jTracert"/>
    </shortcut>

    <shortcut
            name="Uninstall jTracert"
            description="Uninstall jTracert"

            type="Application"

            target="java"
            commandLine="-jar
     &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;"

            programGroup="yes"
            desktop="no"

            iconFile="trashcan_full"
            iconIndex="0"

            encoding="UTF-8"
            terminal="false"
            KdeSubstUID="false"

            Categories="Development;"
            >
        <createForPack name="jTracert" />
    </shortcut>

</shortcuts>
